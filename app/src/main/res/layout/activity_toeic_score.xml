<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ToeicScoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text1"
            android:layout_width="120dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="15dp"
            android:text="회차 : "
            android:textStyle="bold"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/edtNum"
            android:layout_marginTop="8dp"
            android:hint="회차를 입력하세요"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text2"
            android:layout_width="120dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:text="RC : "
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/edtRC"
            android:hint="RC 점수를 입력하세요!"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text3"
            android:layout_width="120dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="LC : "
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/edtLC"
            android:hint="LC 점수를 입력하세요!"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnInit"
            android:background="@drawable/layout_border13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="초기화"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnInsert"
            android:background="@drawable/layout_border13"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="성적 입력"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnSelect"
            android:background="@drawable/layout_border13"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="조회"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="18">

            <TextView
                android:id="@+id/txtNum"
                android:background="@drawable/layout_border14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="회차"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/txtRC"
                android:background="@drawable/layout_border14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="RC"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtLC"
                android:background="@drawable/layout_border14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="LC"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtTotal"
                android:background="@drawable/layout_border14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Total"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/listNum"
                android:background="@drawable/layout_border15"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/listRC"
                android:background="@drawable/layout_border15"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="17dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/listLC"
                android:background="@drawable/layout_border15"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="17dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/listTotal"
                android:background="@drawable/layout_border15"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="17dp"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>









</LinearLayout>